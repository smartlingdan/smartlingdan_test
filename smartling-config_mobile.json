
{
    "locales": [
        {
             "smartling" : "pt-BR",
             "application" : "pt-BR"
         }
     ],
     "resourceSets": [
         {
            "type"      : "json",
            "pathRegex" : ".*files\\/Class.*\\.json",
            "translationPathExpression" : "/files/${locale}/${originalFile.baseName}_${locale}.${originalFile.extension}",
            "translationCommitMessage"  : "Translate ${originalFile.fullName} to ${locale}",
                         "smartlingDirectives"       : [
                 "smartling.placeholder_format = none",
                 "smartling.includeOriginalStrings = false"
            ]
         }

     ]
}
