{
    "locales": [
         {
             "smartling" : "de-DE",
             "application" : "de-DE"
         },
        {
             "smartling" : "pt-BR",
             "application" : "pt-BR"
         },
         {
             "smartling" : "ja-JP",
             "application" : "ja-JP"
         }
     ],

     "resourceSets": [

         {
            "type"      : "javaProperties",
            "pathRegex" : "/Etsy/en/.*\\.properties"
         },
         {
            "type"      : "json",
            "pathRegex" : "/files/.*\\.json",
            "translationPathExpression" : "/files/${locale}/${originalFile.baseName}_${locale}.${originalFile.extension}",
            "translationCommitMessage"  : "Translate ${originalFile.fullName} to ${locale}"
         }

         
     ]
}
