
{
    "locales": [
         {
             "smartling" : "de-DE",
             "application" : "de-DE"
         },
        {
             "smartling" : "pt-BR",
             "application" : "pt-BR"
         },
         {
             "smartling" : "ja-JP",
             "application" : "ja-JP"
         }
     ],
     "resourceSets": [
         {
            "type"      : "javaProperties",
            "pathRegex" : "Client\\/en\\/.*\\.properties",
            "translationPathExpression" : "/Client/${locale}/${originalFile.baseName}_${locale}.${originalFile.extension}",
            "translationCommitMessage"  : "Translate ${originalFile.fullName} to ${locale}",
                         "smartlingDirectives"       : [
                 "smartling.placeholder_format = NONE",
                 "smartling.string_format = NONE",
                 "smartling.placeholder_format_custom = \\{\\d\\}"
            ]
         }
     ]
}
